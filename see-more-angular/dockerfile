  # Build stage
  FROM node:20-alpine AS build

  WORKDIR /app

  COPY package*.json ./
  RUN npm install
  COPY . .
  RUN npm run build

  # Production stage
  FROM nginx:alpine

  COPY --from=build /app/dist/see-more-angular/browser /usr/share/nginx/html
  COPY nginx.conf /etc/nginx/conf.d/default.conf

  # Create certbot webroot
  RUN mkdir -p /var/www/certbot

  EXPOSE 80 443

  CMD ["nginx", "-g", "daemon off;"]