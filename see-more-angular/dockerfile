  # Build stage
  FROM node:20-alpine AS build

  WORKDIR /app

  COPY package*.json ./
  RUN npm install
  COPY . .
  # Build with base href for subdirectory
  RUN npm run build -- --base-href=/seemore/

  # Production stage
  FROM nginx:alpine

  COPY --from=build /app/dist/see-more-angular/browser /usr/share/nginx/html
  COPY nginx.conf /etc/nginx/conf.d/default.conf

  EXPOSE 80

  CMD ["nginx", "-g", "daemon off;"]